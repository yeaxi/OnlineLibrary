<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="models.Book" table="books">
        <id name="id" type="int" column="book_id">
            <generator class="increment"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="author" column="author" type="string"/>
        <property name="description" column="description" type="string"/>
        <property name="genre" column="genre" type="string"/>
        <property name="filePath" column="file" type="string"/>
        <set name="users" table="users_books" lazy="false">
            <key column="book_id"/>
            <many-to-many column="user_id" class="models.User"/>
        </set>
    </class>
</hibernate-mapping>